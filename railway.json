{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "aptPkgs": ["python3", "nodejs", "npm"]
        },
        "install": {
          "cmds": [
            "npm install",
            "pip install -r requirements.txt",
            "npm run build"
          ]
        }
      },
      "artifacts": [
        "/dist",
        "/app.py",
        "/requirements.txt"
      ]
    }
  },
  "deploy": {
    "cmd": ["python", "app.py"],
    "numReplicas": 1,
    "restartPolicyType": "ALWAYS",
    "sleepApplication": false
  }
}